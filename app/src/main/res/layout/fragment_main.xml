<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.honu.giftwise.ContactsFragment"
    >

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin_half"
        android:paddingBottom="@dimen/activity_vertical_margin_half"
        android:id="@+id/contacts_listview"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_contact_fab"
        style="@style/FabStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/ic_person_add_white_24dp"
        app:layout_behavior="com.honu.giftwise.view.ScrollAwareFabBehavior"
        app:layout_anchor="@id/contacts_listview"
        app:layout_anchorGravity="bottom|right|end"
        />

</android.support.design.widget.CoordinatorLayout>