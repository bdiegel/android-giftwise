<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/list_item_contact"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_main_contact_margin_start"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_main_contact_margin_start"
    android:paddingBottom="@dimen/activity_main_contact_margin_vertical"
    android:paddingTop="@dimen/activity_main_contact_margin_vertical"
    >



    <ImageView
        android:id="@+id/list_item_contact_image"
        android:layout_width="@dimen/activity_main_contact_avatar_size"
        android:layout_height="@dimen/activity_main_contact_avatar_size"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        tools:src="@drawable/ic_face_grey600_48dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/list_item_contact_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/ContactTextName"
            tools:text="Contact Name"
            android:layout_centerVertical="true"
