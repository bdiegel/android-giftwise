<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Begin: Events -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_dates"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="EVENTS"
                android:textAppearance="?android:textAppearanceLarge"
                >
            </TextView>

            <LinearLayout
                android:id="@+id/contact_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_contact_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:paddingRight="8dp"
                    android:src="@drawable/ic_cake_grey600_24dp"
                    />

                <TextView
                    android:id="@+id/contact_birthday_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif-condensed"
                    android:text="May 17, 1968"
                    android:textAppearance="?android:textAppearanceMedium"
                    />

                <TextView
                    android:id="@+id/contact_birthday_label"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="birthday"
                    android:textAppearance="?android:textAppearanceSmall"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contact_anniversary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_contact_anniversary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:paddingRight="8dp"
                    android:src="@drawable/ic_local_bar_grey600_24dp"
                    />

                <TextView
                    android:id="@+id/contact_anniversary_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif-condensed"
                    android:text="October 15, 2000"
                    android:textAppearance="?android:textAppearanceMedium"
                    />

                <TextView
                    android:id="@+id/contact_anniversary_label"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="anniversary"
                    android:textAppearance="?android:textAppearanceSmall"
                    />
            </LinearLayout>

        </LinearLayout>
        <!-- End: Events -->

        <!-- Colors  -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            >

            <TextView
                android:id="@+id/profile_colors"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="COLORS"
                android:textAppearance="?android:textAppearanceLarge"
                >
            </TextView>

            <LinearLayout
                android:id="@+id/contact_colors_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/ic_colors_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:paddingRight="8dp"
                    android:src="@drawable/ic_thumb_up_grey600_24dp"
                    />

                <!-- this is a container where ImageViews for liked colors are dynamically added -->
                <LinearLayout
                    android:id="@+id/colors_liked_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">
                </LinearLayout>

            </LinearLayout>
            <!-- End: Colors LIKED  -->

            <!-- Begin: Colors DISLIKED -->
            <LinearLayout
                android:id="@+id/contact_colors_dislike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/ic_colors_dislike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:paddingRight="8dp"
                    android:src="@drawable/ic_thumb_down_grey600_24dp"
                    />

                <!-- this is a container where ImageViews for disliked colors are dynamically added -->
                <LinearLayout
                    android:id="@+id/colors_dislike_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:orientation="horizontal">
                </LinearLayout>

            </LinearLayout>
            <!-- End: Colors DISLIKED -->

        </LinearLayout>
        <!-- End: Colors -->

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            >

            <TextView
                android:id="@+id/profile_sizes"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-condensed"
                android:text="SIZES"
                android:textAppearance="?android:textAppearanceLarge"
                >
            </TextView>

            <LinearLayout
                android:id="@+id/sizes_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:orientation="vertical">
            </LinearLayout>

            <!--<ListView-->
                <!--android:id="@+id/sizes_listview"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!-->-->
            <!--</ListView>-->

        </LinearLayout>

    </LinearLayout>

</ScrollView>