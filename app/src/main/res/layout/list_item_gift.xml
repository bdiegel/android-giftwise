<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="72dp"
        android:layout_height="72dp">

        <ImageView
            android:id="@+id/list_item_gift_image"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gift_silhouette_48dp"
            />

    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_gift_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gift Name"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceLarge"
        />

        <!--<TextView-->
            <!--android:id="@+id/list_item_gift_url_textview"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:text="URL"-->
            <!--android:singleLine="true"-->
            <!--android:ellipsize="end"-->
            <!--android:gravity="bottom"-->
            <!--android:fontFamily="sans-serif-condensed"-->
            <!--android:textAppearance="?android:textAppearanceSmall"-->
            <!--/>-->

    </LinearLayout>

    <TextView
        android:id="@+id/list_item_gift_price_textview"
        android:singleLine="true"
        android:ellipsize="none"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="center_vertical"
        android:text=""
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="?android:textAppearanceMedium"
        />

</LinearLayout>